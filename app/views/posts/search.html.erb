<div class="row">
<div class="col-xs-9">
  <h1 class="titleFont">Keyword Search: <%=@keyword%></h1>
  </div>
<div class="col-xs-3">
  <div  class="newPostBtn">
  <%= link_to new_post_path, :class=>"btn btn-primary btn-lg" do%>
  New Post <span class="glyphicon glyphicon-apple">
  </span>
  <%end%>
  </div>
</div>
</div>

<% if @posts.count > 0 %>
<%= render 'index' %>
<% else %>
  <h3>This key word is not associated with any posts.</h3>
  <% end %>
