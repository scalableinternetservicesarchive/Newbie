<table class="table table-hover">
  <tr>
    <td>
            
                <div class="col-xs-12">
      <div class="col-xs-3"><%= @comment.findUser(@comment.user_id).user_name %> </div>
    <div class="col-xs-6" rows = "5"><%= @comment.content %></div>
          <div class="col-xs-2"><%=@comment.datetime%></div>
          <div class="col-xs-2"><%=@comment.read%></div>
          <div class="col-xs-1"><%= link_to [@comment.post, @comment],
                              :method=>:delete, :data => { :confirm =>
          'Are you sure?' }  do %> <span class="glyphicon glyphicon-remove"></span><%end%></div>
                </div>

    </td>
  </tr>
</table>