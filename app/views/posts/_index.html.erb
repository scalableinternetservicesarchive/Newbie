<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Datetime</th>
      <th>Content</th>
      <th>Image url</th>
      <th>Post Image</th>
      <th>Downvote number</th>
      <th>Upvote number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= post.title %></td>
        <td><%= post.datetime %></td>
        <td><%= post.content %></td>
        <td><%= post.image_url %></td>
        <td><%= image_tag post.post_image.url(:thumb) %></td>
        <td id = "<%= post.id %> downvote"><%= post.downvote_number %></td>
        <td id = "<%= post.id %> upvote"><%= post.upvote_number %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td> <%= button_to 'Upvote', edit_post_path(post), params:{up: true}, :method => :get, remote: true %></td>
        <td> <%= button_to 'Downvote', edit_post_path(post), params:{up: false}, :method => :get, remote: true %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
