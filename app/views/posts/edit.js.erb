document.getElementById("<%= @post.id %> upvote").innerHTML = "<%= @post.upvote_number %>";
document.getElementById("<%= @post.id %> downvote").innerHTML = "<%= @post.downvote_number %>";
<% if current_user and current_user.favorites.exists?(:id => @post.id) %>
document.getElementById("<%=@post.id %>star").className = "glyphicon glyphicon-star"
<% else %>
document.getElementById("<%=@post.id %>star").className = "glyphicon glyphicon-star-empty"
<% end %>
document.getElementById("<%= @post.id %>favorite").innerHTML = "<%= @post.favorited_by.count %>";