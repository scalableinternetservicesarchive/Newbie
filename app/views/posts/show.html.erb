<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @post.title%></h3>
</div>
<div class="panel-body">

<p>
    <% if @post.pictures.empty? %>
        <%= image_tag "default.png", :class => "imgLg" %>
    <% else %>
        <% @post.pictures.each do |pic|%>
            <%= image_tag pic.image.url, :class => "imgLg" %>
        <% end %>
    <% end %> <br>
    <strong><%= @post.user_id %></strong><br>
    <strong><%= @post.datetime %></strong>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>


<p>
  <strong>Downvotes:</strong>
  <%= @post.downvote_number %>
</p>

<p>
  <strong>Upvotes:</strong>
  <%= @post.upvote_number %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @post.tag_list %>
<p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
</div>
</div>
<%= render 'comments' %>

