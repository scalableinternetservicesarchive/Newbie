<p id="notice"><%= notice %></p>

<p>
    <%= image_tag @post.post_image.url(:medium) %><br>
    <strong><%= @post.title %></strong> by
    <strong><%= @post.user_id %></strong><br>
    <strong><%= @post.datetime %></strong>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Image url:</strong>
  <%= image_tag @post.image_url %>
</p>


<p>
  <strong>Downvotes:</strong>
  <%= @post.downvote_number %>
</p>

<p>
  <strong>Upvotes:</strong>
  <%= @post.upvote_number %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @post.tag_list %>
<p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%= render 'comments' %>

