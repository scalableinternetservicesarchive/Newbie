<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Comments</h3>
  </div>
              <div class="panel-body">
<table class="table table-hover">
<% @comments.each do |comment| %>
<% show_content = "" %>
<%if comment.content.length<12 %>
  <% show_content = comment.content%>
<%else%>
  <% show_content = comment.content[0..11]+"..."%>
<%end%>
	<tr>
	  <td>
            
                <div class="col-xs-12">
      <div class="col-xs-3" id="<%= comment.id %>"><%= link_to show_content, '/comments/'+comment.id.to_s+"/"+@post.id.to_s, {:style => 'font-weight:bold;', :onclick => "this.style.font-weight='normal'"} %></div>
      <div class="col-xs-1"><%= link_to [comment.post, comment],
                              :method=>:delete, :data => { :confirm =>
          'Are you sure?' }  do %> <span class="glyphicon glyphicon-remove"></span><%end%></div>

	  </td>
	</tr>
<%end%>
</table>
</div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Add a comment</h3>
  </div>
  <div class="panel-body">
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.text_area :content, :class=>"form-control", :rows=>"5" %>
  </p>
  <p>
    <%= f.submit "Submit", :class=>"btn btn-default"%>
  </p>
  <% end %>
  </div>
  </div>
