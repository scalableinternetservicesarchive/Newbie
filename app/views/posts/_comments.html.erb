<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Comments</h3>
  </div>
              <div class="panel-body">
<table class="table table-hover">
<% @comments.each do |comment| %>
	<tr>
	  <td>
            
                <div class="col-xs-12">
      <div class="col-xs-3"><%= comment.user_id %> </div>
	  <div class="col-xs-6" rows = "5"><%= comment.content %></div>

          <div class="col-xs-3"><%= link_to [comment.post, comment],
	                            :method=>:delete, :data => { :confirm =>
          'Are you sure?' }  do %> <span class="glyphicon glyphicon-remove"></span><%end%></div>
                </div>

	  </td>
	</tr>
<%end%>
</table>
</div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Add a comment</h3>
  </div>
  <div class="panel-body">
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.text_area :content, :class=>"form-control", :rows=>"5" %>
  </p>
  <p>
    <%= f.submit "Submit", :class=>"btn btn-default"%>
  </p>
  <% end %>
  </div>
  </div>
