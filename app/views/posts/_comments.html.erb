<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Comments</h3>
  </div>
  <div class="panel-body">
    <ul class="list-group">
<% @comments.each do |comment| %>
<% show_content = "" %>
<%if comment.content.length<12 %>
  <% show_content = comment.content%>
<%else%>
  <% show_content = comment.content[0..11]+"..."%>
  <%end%>
  <% url = "#collapseComment"+comment.id.to_s%>
  <li class="list-group-item">
    <div class="row">
         <div class="col-xs-10" id="<%= comment.id %>"><%= link_to show_content, url, :class=>"comment-link-normal", :data => {:toggle=>"collapse"},:aria=>{:expanded => "false"} %></div>
        <div class="col-xs-2">
                <% if current_user and current_user.id ==
                comment.user_id %>
                <%= link_to [comment.post, comment],
                              :method=>:delete, :data => { :confirm =>
          'Are you sure?' }  do %> <span class="glyphicon glyphicon-remove"></span><%end%>
              <% end %>
        </div>
    </div>
    <div class="collapse commentItem" id="collapseComment<%=comment.id%>">
      <div class="row">
        <table class="table table-hover">
          <tr>
            <td class="col-xs-3">
              <div class="col-xs-12">
          <% user = comment.findUser() %>
            <%= if user.avatar.file?
            image_tag(user.avatar.url(:thumb), class:'center-block')
                else
            image_tag("no_avatar.png", class:'center-block')
                end %>
              </div>
              <div class="col-xs-12 text-center">
                   <%=user.user_name%>
              </div>
            </td> 
            <td class="col-xs-6">
              <div class="scrollText">
                <%=comment.content%>
                </div>
            </td>
            <td class="col-xs-3"><%=comment.created_at.to_formatted_s(:short) %></td>
          </tr>
          </table>
      </div>
      <div class="row">
      <div class="commentBtn col-xs-1">
        <button class="btn btn-default">
          <span class="glyphicon glyphicon-comment"></span>
        </button>
        </div>
      </div>
    </div>
  </li>
      <%end%>
      </ul>
</div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Add a comment</h3>
  </div>
  <div class="panel-body">
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.text_area :content, :class=>"form-control", :rows=>"5" %>
  </p>
  <p>
    <%= f.submit "Submit", :class=>"btn btn-default"%>
  </p>
  <% end %>
  </div>
  </div>
