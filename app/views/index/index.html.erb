<% content_for :title, "Hungry Foodies" %>

<div id="carousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel" data-slide-to="0" class="active"></li>
    <li data-target="#carousel" data-slide-to="1"></li>
    <li data-target="#carousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
          <%=image_tag("6.jpg", width: '100%', height: '400')%>
      <div class="carousel-caption">
      </div>
    </div>
    <div class="item">
          <%=image_tag("7.jpg", width: '100%', height:'400')%>
      <div class="carousel-caption">
      </div>
    </div>
    <div class="item">
          <%=image_tag("12.jpg", width: '100%', height:'400')%>
      <div class="carousel-caption">
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="posts">
      <div class="container">
        <div class="row">

          <div class="col-md-8">
            <% @posts.in_groups_of(3).each do |posts| %>
              <% posts.select! {|x| !x.nil?} %>
              <div class='row'>
                <% posts.each do |post| %>
                  <div class='col-md-4'>
                      <div class="thumbnail">
                        <%= if post.post_image.exists?
                                link_to image_tag(post.post_image.url), post
                            else
                                link_to image_tag("default.png"), post
                            end
                        %>
                        <div class="caption">
                            <%= link_to post.title, post %>
                        </div>
                      </div>
                    </div>
                <% end %>
              </div>
            <% end %>

          </div>
        </div>

      </div>
    </div>

