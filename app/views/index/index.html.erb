<div class="posts">
      <div class="container">
        <div class="row">

          <div class="col-md-8">
            <% @posts.in_groups_of(3).each do |posts| %>
              <% posts.select! {|x| !x.nil?} %>
              <div class='row'>
                <% posts.each do |post| %>
                  <div class='col-md-4'>
                    <div class="thumbnail">
                        <%= image_tag(post.image_url)%>
                        <div class="caption">
                          <span class="listing-title"><%= post.title %></span>
                        </div>
                      </div>
                    </div>
                <% end %>
              </div>
            <% end %>

          </div>
        </div>

      </div>
    </div>

